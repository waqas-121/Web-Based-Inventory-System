@model Inventory

<form method="post">

	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row">
			<h2>
				@Model.ProductName
			</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-1">
			<label asp-for="ProductName" class="p-0"></label>
			<input asp-for="ProductName" class="form-control" />
			@* <span asp-validation-for="Quantity" class="text-danger"> </span> *@
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Quantity" class="p-0"></label>
			<input asp-for="Quantity" class="form-control" />
			@* <span asp-validation-for="Quantity" class="text-danger"> </span> *@
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Price" class="p-0"></label>
			<input asp-for="Price" class="form-control" />
			@* <span asp-validation-for="Price" class="text-danger"> </span> *@

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="TotalPrice" class="p-0"></label>
			<input asp-for="TotalPrice" readonly class="form-control" />
			@* <span asp-validation-for="Price" class="text-danger"> </span> *@

		</div>

		<div class="row ">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control" asp-action="Edit" asp-controller="Inventory">Update</button>

			</div>
			
			<div class="col-6 col-md-3 ">
				<button class="btn btn-outline-secondary form-control" asp-action="Index" asp-controller="Inventory">Back To List</button>
			</div>

		</div>
	</div>

</form>


