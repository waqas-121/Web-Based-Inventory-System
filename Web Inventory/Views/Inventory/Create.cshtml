@model Inventory

<form method="post">

	<div class="border p-3 mt-4">
		<div class="row">
			<h2>
				Create New Item
			</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-1">
			<label asp-for="ProductName" class="p-0"></label>
			<input asp-for="ProductName" class="form-control" />
			@* <span asp-validation-for="Name" class="text-danger"> </span> *@
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Price" class="p-0"></label>
			<input asp-for="Price" class="form-control" />
			@* <span asp-validation-for="DisplayOrder" class="text-danger"> </span> *@

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Quantity" class="p-0"></label>
			<input asp-for="Quantity" class="form-control" />
			@* <span asp-validation-for="DisplayOrder" class="text-danger"> </span> *@

		</div>
		@*  <div class="mb-3 row p-1">
			<label asp-for="TotalPrice" class="p-0"></label>
			<input asp-for="TotalPrice" readonly class="form-control" />
		</div>  *@

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<button class="btn btn-outline-secondary form-control" asp-action="Create" asp-controller="Inventory">Back To List</button>
			</div>

		</div>
	</div>

</form>

